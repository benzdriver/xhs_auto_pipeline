# Web Scraping Toolkit Example Configuration

#########################################
# Proxy Configuration
#########################################
# Enable proxy rotation
USE_PROXY=true

# Time in seconds between proxy rotations
PROXY_ROTATION_INTERVAL=300

# Maximum requests per IP before rotation
MAX_REQUESTS_PER_IP=10

# Time in minutes before a blacklisted proxy can be used again
IP_COOLDOWN_MINUTES=30

# SmartProxy Configuration
SMARTPROXY_USERNAME=your_username
SMARTPROXY_PASSWORD=your_password
SMARTPROXY_ENDPOINT=gate.smartproxy.com
SMARTPROXY_PORT=7000
SMARTPROXY_ADDITIONAL_PORTS=7001,7002,7003

# Custom proxies (JSON array)
# Each proxy should have server, username, password, and protocol
CUSTOM_PROXIES=[{"server":"proxy1.example.com:8080","username":"user1","password":"pass1","protocol":"http"},{"server":"proxy2.example.com:8080","username":"user2","password":"pass2","protocol":"http"}]

#########################################
# CAPTCHA Solving Configuration
#########################################
# CAPTCHA service to use (currently only supports 2captcha)
CAPTCHA_SERVICE=2captcha

# API key for 2captcha service
TWOCAPTCHA_API_KEY=your_2captcha_api_key

#########################################
# Cache Configuration
#########################################
# Enable caching
USE_CACHE=true

# Directory to store cache files
CACHE_DIRECTORY=cache

# Cache expiration time in seconds (24 hours by default)
CACHE_EXPIRATION_SECONDS=86400

#########################################
# Logging Configuration
#########################################
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable logging to file
LOG_TO_FILE=true

# Directory to store log files
LOG_DIRECTORY=logs 